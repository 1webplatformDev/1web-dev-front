{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "ts-node": {
    "esm": true,
  }, 
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}